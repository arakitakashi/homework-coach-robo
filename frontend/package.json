{
	"name": "frontend",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"e2e": "playwright test --config e2e/playwright.config.ts",
		"e2e:smoke": "playwright test --config e2e/playwright.config.ts --project=smoke",
		"e2e:functional": "playwright test --config e2e/playwright.config.ts --project=smoke --project=functional",
		"e2e:integration": "playwright test --config e2e/playwright.config.ts --project=integration"
	},
	"dependencies": {
		"@rive-app/react-canvas": "^4.26.2",
		"framer-motion": "^12.34.0",
		"jotai": "^2.17.0",
		"lucide-react": "^0.563.0",
		"next": "16.1.6",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@playwright/test": "^1.58.2",
		"@tailwindcss/postcss": "^4",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "^4.0.18",
		"jsdom": "^27.4.0",
		"tailwindcss": "^4",
		"typescript": "^5",
		"vitest": "^4.0.18"
	},
	"ignoreScripts": [
		"sharp",
		"unrs-resolver"
	],
	"trustedDependencies": [
		"sharp",
		"unrs-resolver"
	]
}
